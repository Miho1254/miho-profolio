---
export interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
---
<aside class="py-12 mt-16 max-w-3xl mx-auto border-t-2 border-dashed border-gray-200">
  
  <!-- Nút Share Mạng Xã Hội -->
  <div class="flex flex-col sm:flex-row items-center justify-between mb-12 gap-4">
    <span class="font-bold text-gray-700 text-lg">Chia sẻ bài viết:</span>
    <div class="flex space-x-3">
      <!-- Facebook -->
      <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`} target="_blank" rel="noopener noreferrer" class="bg-[#1877F2] text-white p-3 rounded-full hover:scale-105 transition-transform shadow-sm" aria-label="Share on Facebook">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.469h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.469h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
      </a>
      <!-- Twitter/X -->
      <a href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`} target="_blank" rel="noopener noreferrer" class="bg-black text-white p-3 rounded-full hover:scale-105 transition-transform shadow-sm" aria-label="Share on Twitter">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.008 3.827H5.045z"/></svg>
      </a>
      <!-- LinkedIn -->
      <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(url)}&title=${encodeURIComponent(title)}`} target="_blank" rel="noopener noreferrer" class="bg-[#0A66C2] text-white p-3 rounded-full hover:scale-105 transition-transform shadow-sm" aria-label="Share on LinkedIn">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
      <!-- Copy Link -->
      <button onclick="navigator.clipboard.writeText(window.location.href); alert('Đã copy link bài viết!');" class="bg-gray-200 text-gray-700 p-3 rounded-full hover:scale-105 transition-transform shadow-sm cursor-pointer" aria-label="Copy Link">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path></svg>
      </button>
    </div>
  </div>

  <!-- Hộp Thông Tin Tác Giả -->
  <div class="bg-gray-50 rounded-3xl p-6 md:p-8 flex flex-col md:flex-row items-center md:items-start gap-6 shadow-sm mb-16 border border-gray-100">
    <img src="/assets/images/miho-with-bg.webp" alt="Miho" class="w-24 h-24 rounded-full object-cover border-4 border-white shadow-md flex-shrink-0" />
    <div class="text-center md:text-left">
      <h3 class="text-2xl font-bold text-gray-900 mb-2">Miho</h3>
      <p class="text-gray-600 mb-5 leading-relaxed">
        Software Engineer | Thích phân tích những hệ thống phức tạp, từ những dòng code phần mềm cho đến những khái niệm triết học đời sống.
      </p>
      <a href="/" class="inline-block bg-hot-pink text-white font-bold py-2.5 px-6 rounded-full hover:opacity-90 transition-opacity shadow-sm">
        Khám phá thư viện của tôi
      </a>
    </div>
  </div>

  <!-- Khung Bình Luận Utterances (Dựa trên Github Issues) -->
  <div class="w-full">
    <h3 class="font-bold text-2xl mb-6 text-gray-800">Thảo luận</h3>
    <section id="comments-section" class="min-h-[250px] rounded-xl border border-gray-100 bg-white p-4 shadow-sm relative z-0">
      <script src="https://utteranc.es/client.js"
        repo="Miho1254/miho-profolio"
        issue-term="pathname"
        theme="github-light"
        crossorigin="anonymous"
        async>
      </script>
    </section>
  </div>
</aside>

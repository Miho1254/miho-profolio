---
import PostFooter from './PostFooter.astro';
import { Image } from 'astro:assets';
import dayjs from 'dayjs';
import 'dayjs/locale/vi';

export interface Props {
  title: string;
  date: string;
  hero: string | any;
  youtube: string;
}

const { title, date, hero, youtube } = Astro.props;
---

<article class="max-w-5xl mx-auto px-3">
  <header class="mx-auto max-w-3xl text-center content">
    <h1 class="mb-4">{title}</h1>
    
    <div class="flex items-center justify-center space-x-3 mt-8 mb-10 text-gray-500">
      <div class="flex items-center space-x-2">
        <img src="/assets/images/miho-with-bg.webp" alt="Miho" class="w-[42px] h-[42px] m-0 rounded-full object-cover border-2 border-gray-100 shadow-sm" />
        <span class="text-gray-900 font-bold text-base tracking-tight">Miho</span>
      </div>
      <span class="text-gray-300 text-lg leading-none">•</span>
      <time datetime={date} class="text-sm font-medium">
        {dayjs(date).locale('vi').format('DD MMMM, YYYY')}
      </time>
    </div>
  </header>

  <!-- Image -->
  {hero && (
    typeof hero === 'string' ? 
      <img class="rounded-xl mx-auto" style="min-width: 80%;" loading="lazy" src={hero} alt={title} /> :
      <Image class="rounded-xl mx-auto" style="min-width: 80%;" src={hero} alt={title} />
  )}

  <!-- YouTube Video -->
  {youtube && <div class="embed-responsive aspect-ratio-16/9 mt-6 lg:mt-12">
    <iframe width="700" height="500" class="embed-responsive-item"
      src={`https://www.youtube.com/embed/${youtube}`} frameborder="0"
      allow="accelerometer; autoplay; encrypted-media; gyroscope;" allowfullscreen></iframe>
  </div>}

  <!-- Content -->
  <section class="max-w-3xl mx-auto py-6 lg:py-12 content">
    <slot />
  </section>

  <PostFooter title={title} url={Astro.url.href} />
</article>

<script>
  // Chuyển đổi thuộc tính title của thẻ abbr thành data-title khi tải trang
  // Việc này nhằm giấu tooltip trắng mặc định của Chrome đi, chỉ giữ lại custom UI Tooltip CSS
  document.querySelectorAll('abbr[title]').forEach(abbr => {
    abbr.setAttribute('data-title', abbr.getAttribute('title') || '');
    abbr.removeAttribute('title');
  });
</script>
